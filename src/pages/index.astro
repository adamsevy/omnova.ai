---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'OmNova - Hire Genius-Level AI Teams',
  description:
    'For the first time, organizations of any size can access expert-level intelligence, working 24/7, tailored precisely to their challenges.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get started',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'OmNova Hero Image' }}
  >
    <Fragment slot="title">Hire Genius-Level AI Teams. On Demand.</Fragment>

    <Fragment slot="subtitle">
      For the first time, organizations of any size can access expert-level intelligence, working 24/7, tailored
      precisely to their challenges. No massive overhead. No long contracts. Just results.
    </Fragment>
  </Hero>

  <!-- Note Widget -->
  <Note>
    <Fragment slot="title">Better Human Hypothesis</Fragment>

    <Fragment slot="description">
      Amplify human capabilities with AI. The most human-centric organizations will be the most successful.
    </Fragment>
  </Note>

  <!-- Features Widget -->
  <Features
    id="features"
    tagline="Platform"
    title="How It Works"
    subtitle="OmNova deploys dynamic teams of AI agents to tackle your most important work."
    items={[
      {
        title: 'Comprehensive Context',
        description:
          'Your AI agents are not operating in a vacuum. They see your business holisticallyâ€”your goals, your systems, your market, your history. This comprehensive context is what separates genius-level thinking from generic automation.',
        icon: 'tabler:brain',
      },
      {
        title: 'Permissionless Leverage',
        description:
          'For the first time, leverage is available to everyone. Our AI agents scale like software but work like teams. Deploy instantly. No permission needed. No marginal cost per additional capability.',
        icon: 'tabler:rocket',
      },
      {
        title: 'The Better Human Hypothesis',
        description:
          'We do not believe in replacing human judgment. We believe in amplifying it. Organizations that embrace human-centric AI will outperform those that do not.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Intelligence That Scales',
        description:
          'What works for you strengthens our platform for everyone. Insights from your solution power the next venture. This creates a virtuous cycle of capability and value.',
        icon: 'tabler:chart-line',
      },
    ]}
  />
</Layout>
