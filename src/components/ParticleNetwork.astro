---
// Particle Network Animation - Shows AI agents coordinating
---

<div id="particle-network" class="absolute inset-0 opacity-50"></div>

<script>
  class ParticleNetwork {
    constructor(canvas) {
      this.canvas = canvas;
      this.ctx = canvas.getContext('2d');
      this.particles = [];
      this.connectionDistance = 180;
      this.particleCount = 80;
      this.mouse = { x: null, y: null };
      
      this.resize();
      this.init();
      this.animate();
      
      window.addEventListener('resize', () => this.resize());
      canvas.addEventListener('mousemove', (e) => {
        const rect = canvas.getBoundingClientRect();
        this.mouse.x = e.clientX - rect.left;
        this.mouse.y = e.clientY - rect.top;
      });
      canvas.addEventListener('mouseleave', () => {
        this.mouse.x = null;
        this.mouse.y = null;
      });
    }
    
    resize() {
      this.canvas.width = this.canvas.offsetWidth;
      this.canvas.height = this.canvas.offsetHeight;
    }
    
    init() {
      this.particles = [];
      for (let i = 0; i < this.particleCount; i++) {
        this.particles.push({
          x: Math.random() * this.canvas.width,
          y: Math.random() * this.canvas.height,
          originalX: 0,
          originalY: 0,
          vx: (Math.random() - 0.5) * 0.8,
          vy: (Math.random() - 0.5) * 0.8,
          radius: Math.random() * 2.5 + 1.5,
          color: Math.random() > 0.6 ? '#BD5931' : '#60a5fa',
          pulsePhase: Math.random() * Math.PI * 2,
          pulseSpeed: 0.03 + Math.random() * 0.03
        });
      }
      
      // Set original positions for spring-back effect
      this.particles.forEach(p => {
        p.originalX = p.x;
        p.originalY = p.y;
      });
    }
    
    drawParticle(particle) {
      const pulse = Math.sin(particle.pulsePhase) * 0.5 + 1;
      particle.pulsePhase += particle.pulseSpeed;
      
      this.ctx.beginPath();
      this.ctx.arc(particle.x, particle.y, particle.radius * pulse, 0, Math.PI * 2);
      this.ctx.fillStyle = particle.color;
      this.ctx.shadowBlur = 15;
      this.ctx.shadowColor = particle.color;
      this.ctx.fill();
      this.ctx.shadowBlur = 0;
    }
    
    drawConnection(p1, p2, distance) {
      const opacity = 1 - (distance / this.connectionDistance);
      this.ctx.beginPath();
      this.ctx.moveTo(p1.x, p1.y);
      this.ctx.lineTo(p2.x, p2.y);
      this.ctx.strokeStyle = `rgba(255, 255, 255, ${opacity * 0.5})`;
      this.ctx.lineWidth = 1.5;
      this.ctx.stroke();
    }
    
    updateParticle(particle) {
      particle.x += particle.vx;
      particle.y += particle.vy;
      
      // Enhanced mouse interaction
      if (this.mouse.x !== null) {
        const dx = this.mouse.x - particle.x;
        const dy = this.mouse.y - particle.y;
        const dist = Math.sqrt(dx * dx + dy * dy);
        
        // Attraction zone (medium distance)
        if (dist < 200 && dist > 50) {
          particle.vx += dx * 0.0005;
          particle.vy += dy * 0.0005;
        }
        
        // Repulsion zone (very close)
        if (dist < 50) {
          particle.vx -= dx * 0.002;
          particle.vy -= dy * 0.002;
        }
      }
      
      // Spring force back to original position (prevents clustering)
      const dxFromOrigin = particle.originalX - particle.x;
      const dyFromOrigin = particle.originalY - particle.y;
      const distFromOrigin = Math.sqrt(dxFromOrigin * dxFromOrigin + dyFromOrigin * dyFromOrigin);
      
      // Gentle pull back to original position
      if (distFromOrigin > 50) {
        particle.vx += dxFromOrigin * 0.0002;
        particle.vy += dyFromOrigin * 0.0002;
      }
      
      // Particle-to-particle repulsion (prevents blob formation)
      this.particles.forEach(other => {
        if (other !== particle) {
          const dx = particle.x - other.x;
          const dy = particle.y - other.y;
          const dist = Math.sqrt(dx * dx + dy * dy);
          
          if (dist < 40 && dist > 0) {
            const force = (40 - dist) / 40;
            particle.vx += (dx / dist) * force * 0.1;
            particle.vy += (dy / dist) * force * 0.1;
          }
        }
      });
      
      if (particle.x < 0 || particle.x > this.canvas.width) particle.vx *= -1;
      if (particle.y < 0 || particle.y > this.canvas.height) particle.vy *= -1;
      
      particle.x = Math.max(0, Math.min(this.canvas.width, particle.x));
      particle.y = Math.max(0, Math.min(this.canvas.height, particle.y));
      
      particle.vx *= 0.98;
      particle.vy *= 0.98;
    }
    
    animate() {
      this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);
      
      this.particles.forEach(particle => {
        this.updateParticle(particle);
        this.drawParticle(particle);
      });
      
      // Draw connections
      for (let i = 0; i < this.particles.length; i++) {
        for (let j = i + 1; j < this.particles.length; j++) {
          const dx = this.particles[i].x - this.particles[j].x;
          const dy = this.particles[i].y - this.particles[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          
          if (distance < this.connectionDistance) {
            this.drawConnection(this.particles[i], this.particles[j], distance);
          }
        }
        
        // Draw connections to mouse
        if (this.mouse.x !== null) {
          const dx = this.particles[i].x - this.mouse.x;
          const dy = this.particles[i].y - this.mouse.y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          
          if (distance < 150) {
            const opacity = 1 - (distance / 150);
            this.ctx.beginPath();
            this.ctx.moveTo(this.particles[i].x, this.particles[i].y);
            this.ctx.lineTo(this.mouse.x, this.mouse.y);
            this.ctx.strokeStyle = `rgba(189, 89, 49, ${opacity * 0.6})`;
            this.ctx.lineWidth = 2;
            this.ctx.stroke();
          }
        }
      }
      
      requestAnimationFrame(() => this.animate());
    }
  }
  
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('particle-network');
    if (container) {
      const canvas = document.createElement('canvas');
      canvas.style.width = '100%';
      canvas.style.height = '100%';
      container.appendChild(canvas);
      new ParticleNetwork(canvas);
    }
  });
</script>
