---
// Particle Network Animation - Shows AI agents coordinating
---

<div id="particle-network" class="absolute inset-0 opacity-50"></div>

<script>
  class ParticleNetwork {
    constructor(canvas) {
      this.canvas = canvas;
      this.ctx = canvas.getContext('2d');
      this.particles = [];
      this.connectionDistance = 180;
      this.particleCount = 60; // Reduced from 80 for less visual noise
      this.mouse = { x: null, y: null };
      this.animationFrame = null;
      
      this.resize();
      this.init();
      this.startAnimation();
      
      window.addEventListener('resize', () => this.resize());
      
      // Track mouse globally relative to canvas
      window.addEventListener('mousemove', (e) => {
        const rect = canvas.getBoundingClientRect();
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const scrollLeft = window.pageXOffset || document.documentElement.scrollLeft;
        
        // Calculate mouse position relative to canvas, accounting for scroll
        const canvasTop = rect.top + scrollTop;
        const canvasLeft = rect.left + scrollLeft;
        const mouseY = e.pageY - canvasTop;
        const mouseX = e.pageX - canvasLeft;
        
        // Only track if mouse is actually over the canvas area
        if (mouseX >= 0 && mouseX <= this.canvas.width && 
            mouseY >= 0 && mouseY <= this.canvas.height) {
          this.mouse.x = mouseX;
          this.mouse.y = mouseY;
        } else {
          this.mouse.x = null;
          this.mouse.y = null;
        }
      });
      
      canvas.addEventListener('mouseleave', () => {
        this.mouse.x = null;
        this.mouse.y = null;
      });
    }
    
    resize() {
      this.canvas.width = this.canvas.offsetWidth;
      this.canvas.height = this.canvas.offsetHeight;
      
      // Reinitialize particles on resize to maintain proper distribution
      if (this.particles.length > 0) {
        this.init();
      }
    }
    
    init() {
      this.particles = [];
      for (let i = 0; i < this.particleCount; i++) {
        this.particles.push({
          x: Math.random() * this.canvas.width,
          y: Math.random() * this.canvas.height,
          originalX: 0,
          originalY: 0,
          vx: (Math.random() - 0.5) * 0.2, // Reduced from 0.5 - slower base movement
          vy: (Math.random() - 0.5) * 0.2, // Reduced from 0.5 - slower base movement
          radius: Math.random() * 2 + 1.5, // Slightly smaller particles
          color: Math.random() > 0.6 ? '#BD5931' : '#60a5fa',
          pulsePhase: Math.random() * Math.PI * 2,
          pulseSpeed: 0.02 // Reduced from 0.03 - slower pulsing
        });
      }
      
      // Set original positions for spring-back effect
      this.particles.forEach(p => {
        p.originalX = p.x;
        p.originalY = p.y;
      });
    }
    
    drawParticle(particle) {
      const pulse = Math.sin(particle.pulsePhase) * 0.4 + 1; // Reduced pulse intensity
      particle.pulsePhase += particle.pulseSpeed;
      
      this.ctx.beginPath();
      this.ctx.arc(particle.x, particle.y, particle.radius * pulse, 0, Math.PI * 2);
      this.ctx.fillStyle = particle.color;
      this.ctx.shadowBlur = 12; // Reduced glow
      this.ctx.shadowColor = particle.color;
      this.ctx.fill();
      this.ctx.shadowBlur = 0;
    }
    
    drawConnection(p1, p2, distance) {
      const opacity = 1 - (distance / this.connectionDistance);
      this.ctx.beginPath();
      this.ctx.moveTo(p1.x, p1.y);
      this.ctx.lineTo(p2.x, p2.y);
      this.ctx.strokeStyle = `rgba(255, 255, 255, ${opacity * 0.4})`; // More subtle connections
      this.ctx.lineWidth = 1;
      this.ctx.stroke();
    }
    
    updateParticle(particle) {
      particle.x += particle.vx;
      particle.y += particle.vy;
      
      // Gentler mouse interaction
      if (this.mouse.x !== null) {
        const dx = this.mouse.x - particle.x;
        const dy = this.mouse.y - particle.y;
        const dist = Math.sqrt(dx * dx + dy * dy);
        
        // Attraction zone (medium distance) - REDUCED strength
        if (dist < 200 && dist > 80) { // Increased minimum distance
          const force = 0.0002; // Reduced from 0.0005
          particle.vx += dx * force;
          particle.vy += dy * force;
        }
        
        // Repulsion zone (very close) - REDUCED strength
        if (dist < 80) { // Increased repulsion distance
          const force = 0.0008; // Reduced from 0.002
          particle.vx -= dx * force;
          particle.vy -= dy * force;
        }
      }
      
      // Spring force back to original position - GENTLER
      const dxFromOrigin = particle.originalX - particle.x;
      const dyFromOrigin = particle.originalY - particle.y;
      const distFromOrigin = Math.sqrt(dxFromOrigin * dxFromOrigin + dyFromOrigin * dyFromOrigin);
      
      // Gentle pull back to original position
      if (distFromOrigin > 30) { // Reduced threshold
        const springForce = 0.00015; // Reduced from 0.0002
        particle.vx += dxFromOrigin * springForce;
        particle.vy += dyFromOrigin * springForce;
      }
      
      // Particle-to-particle repulsion - REDUCED
      this.particles.forEach(other => {
        if (other !== particle) {
          const dx = particle.x - other.x;
          const dy = particle.y - other.y;
          const dist = Math.sqrt(dx * dx + dy * dy);
          
          if (dist < 30 && dist > 0) { // Reduced from 40
            const force = (30 - dist) / 30;
            const repelStrength = 0.05; // Reduced from 0.1
            particle.vx += (dx / dist) * force * repelStrength;
            particle.vy += (dy / dist) * force * repelStrength;
          }
        }
      });
      
      // Bounce off edges
      if (particle.x < 0 || particle.x > this.canvas.width) particle.vx *= -1;
      if (particle.y < 0 || particle.y > this.canvas.height) particle.vy *= -1;
      
      particle.x = Math.max(0, Math.min(this.canvas.width, particle.x));
      particle.y = Math.max(0, Math.min(this.canvas.height, particle.y));
      
      // Stronger damping for smoother movement
      const damping = 0.96; // Increased from 0.98 - more resistance
      particle.vx *= damping;
      particle.vy *= damping;
    }
    
    animate() {
      this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);
      
      this.particles.forEach(particle => {
        this.updateParticle(particle);
        this.drawParticle(particle);
      });
      
      // Draw connections
      for (let i = 0; i < this.particles.length; i++) {
        for (let j = i + 1; j < this.particles.length; j++) {
          const dx = this.particles[i].x - this.particles[j].x;
          const dy = this.particles[i].y - this.particles[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          
          if (distance < this.connectionDistance) {
            this.drawConnection(this.particles[i], this.particles[j], distance);
          }
        }
        
        // Draw connections to mouse - MORE SUBTLE
        if (this.mouse.x !== null) {
          const dx = this.particles[i].x - this.mouse.x;
          const dy = this.particles[i].y - this.mouse.y;
          const distance = Math.sqrt(dx * dx + dy * dy);
          
          if (distance < 120) { // Reduced range from 150
            const opacity = 1 - (distance / 120);
            this.ctx.beginPath();
            this.ctx.moveTo(this.particles[i].x, this.particles[i].y);
            this.ctx.lineTo(this.mouse.x, this.mouse.y);
            this.ctx.strokeStyle = `rgba(189, 89, 49, ${opacity * 0.4})`; // Reduced from 0.6
            this.ctx.lineWidth = 1.5;
            this.ctx.stroke();
          }
        }
      }
      
      this.animationFrame = requestAnimationFrame(() => this.animate());
    }
    
    startAnimation() {
      if (!this.animationFrame) {
        this.animate();
      }
    }
    
    stopAnimation() {
      if (this.animationFrame) {
        cancelAnimationFrame(this.animationFrame);
        this.animationFrame = null;
      }
    }
  }
  
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('particle-network');
    if (container) {
      const canvas = document.createElement('canvas');
      canvas.style.width = '100%';
      canvas.style.height = '100%';
      container.appendChild(canvas);
      new ParticleNetwork(canvas);
    }
  });
</script>
